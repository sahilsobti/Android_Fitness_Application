<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation="portrait">
    <include
        android:id="@+id/appbarr"
        layout="@layout/app_bar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:layout_gravity="center"
                android:layout_marginTop="-5sp"
                android:src="@drawable/man2" />

            <TextView
                android:id="@+id/PName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5sp"
                android:text="TextView"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/tage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="18sp"
                android:paddingTop="10sp"
                android:text="Age : "
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="50sp"
                android:background="#ced3d5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@drawable/agelogo" />

                <TextView
                    android:id="@+id/PAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40sp"
                    android:padding="10sp"
                    android:text="TextView"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tsex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18sp"
                android:paddingTop="10sp"
                android:text="Sex : "
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="50sp"
                android:background="#ced3d5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@drawable/sexlogo" />

                <TextView
                    android:id="@+id/PSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40sp"
                    android:padding="10sp"
                    android:paddingLeft="10sp"
                    android:paddingTop="20sp"
                    android:text="TextView"
                    android:textSize="15sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tdob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="18sp"
                android:paddingTop="10sp"
                android:text="DOB : "
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="50sp"
                android:background="#ced3d5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@drawable/calendarlogo" />

                <TextView
                    android:id="@+id/PDob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40sp"
                    android:padding="10sp"
                    android:paddingLeft="10sp"
                    android:paddingTop="20sp"
                    android:text="TextView"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tjoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18sp"
                android:paddingTop="10sp"
                android:text="Joining date : "
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="50sp"
                android:background="#ced3d5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@drawable/calendarlogo" />

                <TextView
                    android:id="@+id/PJoining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40sp"
                    android:padding="10sp"
                    android:paddingLeft="10sp"
                    android:paddingTop="20sp"
                    android:text="TextView"
                    android:textSize="15sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18sp"
                android:paddingTop="10sp"
                android:text="Phone Number :"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="50sp"
                android:background="#ced3d5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:background="@drawable/phonelogo" />

                <TextView
                    android:id="@+id/PPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40sp"
                    android:padding="10sp"
                    android:paddingLeft="10sp"
                    android:paddingTop="10sp"
                    android:text="TextView"
                    android:textSize="15sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10sp">

                <Button
                    android:id="@+id/PEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:padding="10sp"
                    android:text="Edit Contact" />

                <Button
                    android:id="@+id/PDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:paddingBottom="10sp"
                    android:paddingLeft="30sp"
                    android:paddingRight="30sp"
                    android:paddingTop="10sp"
                    android:text="Delete" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>